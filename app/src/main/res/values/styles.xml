<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/pale_lavender_dark</item>
        <item name="colorAccent">@color/lighter_purple</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimary">@color/pale_lavender</item>
        <item name="colorPrimaryDark">@color/pale_lavender_dark</item>
        <item name="colorAccent">@color/lighter_purple</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="EvaluationTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pale_lavender</item>
        <item name="colorPrimaryDark">@color/pale_lavender_dark</item>
        <item name="colorAccent">@color/lighter_purple</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Titlecenter">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TitleLeft">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Subheadingsection">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Subheading">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#9b9b9b</item>
        <item name="android:letterSpacing">-0.0</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Subheadingleft">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing">-0.0</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Buttondark">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Bodylink">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/lighter_purple</item>
        <item name="android:letterSpacing">-0.0</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Bodyplaceholder">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#7b7b7b</item>
        <item name="android:letterSpacing">-0.0</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Tag">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#7b7b7b</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="Inputright">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:letterSpacing">-0.0</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AuthenticationProgressDialog" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
